<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ModuleManager.SqlServer</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ModuleManager.SqlServer.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ModuleManager.SqlServer</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
					<ul class="navbar-nav flex-grow-1 justify-content-end">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item d-flex align-items-center">
								@if (User.HasClaim(c => c.Type == "ImageUrl" && !string.IsNullOrEmpty(c.Value)))
								{
									<img src="@User.FindFirst("ImageUrl").Value" alt="User Image" class="rounded-circle" width="30" height="30" />
								}
								<span class="text-dark fw-bold" style="margin-left: 5px;">@User.Identity.Name</span>
							</li>
							<li class="nav-item">
								<form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
									<button type="submit" class="btn btn-outline-danger" style="display:inline; margin-left:15px;">Đăng xuất</button>
								</form>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link text-primary" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-success" style="margin-left:5px;" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
							</li>
						}
					</ul>


				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - ModuleManager.SqlServer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
