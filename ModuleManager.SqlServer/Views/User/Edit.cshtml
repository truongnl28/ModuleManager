@model ModuleManager.SqlServer.Models.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin người dùng";
}

<h2 class="text-center">Chỉnh sửa thông tin người dùng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" style="font-weight: bold;">Tên người dùng:</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" style="font-weight: bold;">Email:</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" style="font-weight: bold;">Hình ảnh đang sử dụng:</label>
        <div class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" width="150" />
            <input type="hidden" asp-for="ImageUrl" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" style="font-weight: bold;">Hình ảnh mới:</label>
        <div class="col-sm-10">
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-success" style="margin-right: 10px;">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
